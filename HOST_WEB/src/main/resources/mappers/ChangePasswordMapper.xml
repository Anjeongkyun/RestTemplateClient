<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daon.host.web.mapper.ChangePasswordMapper">


   <select id="pwCheck" resultType="String">
   
      select login_pw from tb_o_webuser

      <where>
         <if test=" req.id != null and req.id!= '' ">
            AND login_id = #{req.id}
         </if>
         <if test=" req.password != null and req.password != '' ">
            AND login_pw = #{req.password}
         </if>
      </where>

   </select>


   <update id="setChangePassword">
   
      update tb_o_webuser set login_pw = #{req.newPassword}
      
      <where>
         <if test=" req.id != null and req.id!= '' ">
            AND login_id = #{req.id}
         </if>
      </where>
   </update>

</mapper>