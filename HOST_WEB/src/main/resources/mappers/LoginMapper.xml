<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daon.host.web.mapper.LoginMapper">
	<select id="login" resultType="LoginVo">
		SELECT notice_no,
		apt_id,
		notice_writer,
		notice_cont,
		notice_title,
		remk,
		ins_id,
		ins_date,
		upd_id,
		upd_date
		FROM tb_o_notice
		<where>
			<if test=" noticeNo != null and noticeNo != '' ">
				AND notice_no = #{noticeNo}
			</if>
		</where>
	</select>

	<select id="getLogin" resultType="com.daon.host.web.vo.LoginVo$Table">
		select * from tb_o_webuser
		<where>
			<if test=" login.loginId != null and login.loginId != '' ">
				AND login_id = #{login.loginId}
			</if>
			<if test=" login.loginPw != null and login.loginPw != '' ">
				AND login_pw = #{login.loginPw}
			</if>

		</where>
	</select>

	<select id="getLoginAll" resultType="LoginVo">
		select * from tb_o_webuser
	</select>

</mapper>