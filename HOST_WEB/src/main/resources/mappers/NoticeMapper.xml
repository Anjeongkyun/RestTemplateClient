<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daon.host.web.mapper.NoticeMapper">
	<select id="selectNo" resultType = "Notice">
		SELECT	notice_no,
				apt_id,
				notice_writer,
				notice_cont,
				notice_title,
				remk,
				ins_id,
				ins_date,
				upd_id,
				upd_date
		FROM tb_o_notice
		<where>
            <if test=" noticeNo != null and noticeNo != '' ">
                AND notice_no = #{noticeNo}
            </if>
		</where>
			
			
	</select>

</mapper>